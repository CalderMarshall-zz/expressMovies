<% include head.ejs %>

<body>
<div class="container">

    <div class="row">
        <% for(let i = 0; i < nowPlayingData.length; i++){ %>
            <div class="col-md-6" style="padding: 50px 0px">

                <a href="/movie/<%=nowPlayingData[i].id%>">
                    <img src="<%= imageBaseUrl+nowPlayingData[i].poster_path %>"/>
                </a>


            </div>

            <div class="col-md-6" style="padding: 50px 0px">
                <h2><%=nowPlayingData[i].title%></h2>
                <%=nowPlayingData[i].overview%>
            </div>
        <% } %>

    </div>
</div>
</body>

